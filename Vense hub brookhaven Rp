local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")

-- [ SCRIPT CONFIGURATION ]
local Scripts = {
    ["Brookhaven"] = {id = 4924922222, url = "https://raw.githubusercontent.com/fhrdimybds-byte/Vense-hub-brookhaven-Rp/refs/heads/main/Lua"},
}

-- [ SCRIPT UNIVERSAL ]
-- This script will load if the current game is not in the list above.
local UniversalScript = ""

-- [ NOTIFICATION FUNCTION ]
local function SendNotif(title, text, icon)
    StarterGui:SetCore("SendNotification", {
        Title = title,
        Text = text,
        Icon = icon or "rbxassetid://12187376174", -- Ícone padrão
        Duration = 5
    })
end

-- [ LOADER LOGIC ]
local function LoadGame()
    local currentId = game.PlaceId
    local found = false
    local scriptToLoad = ""
    local gameName = ""

    -- 1. Check if the game is on the list.
    for name, data in pairs(Scripts) do
        if data.id == currentId then
            found = true
            gameName = name
            scriptToLoad = data.url
            break
        end
    end

    if found then
        -- 2. If the game IS supported
        SendNotif("Game Supported!", "Loading script for: " .. gameName, "rbxassetid://134007213543148")
        task.wait(1)
        
        local success, err = pcall(function()
            loadstring(game:HttpGet(scriptToLoad))()
        end)
        
        if not success then
            SendNotif("Error", "Failed to load script: " .. tostring(err))
        end
    else
        -- 3. If the game is NOT supported
        SendNotif("Not Supported", "Game not in list. ", "rbxassetid://135619040309127")
        task.wait(1)
        
        local success, err = pcall(function()
            loadstring(game:HttpGet(UniversalScript))()
        end)
        
        if not success then
            print("hello world!")
        end
    end
end

-- Start the Loader
LoadGame()
